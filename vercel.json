{
  "version": 2,
  "builds": [
    {
      "src": "api/convert.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": "api/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/convert",
      "dest": "api/convert.py",
      "methods": ["POST"]
    }
  ]
}
